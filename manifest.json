{
  "name": "LibGenContext",
  "description": "Adds right click and lookup the selected text on LibGen as well as entering lib into the omnibox then tab and search terms",
  "version": "1.0.1",
  "permissions": ["contextMenus"],
  "background": {
    "persistent": false,
    "scripts": ["js/background.js", "js/gcookie.js", "js/omnibackground.js"]
  },
  "omnibox": {
    "keyword": "lib"
  },
  "manifest_version": 2,

  "icons": {
    "16": "img/favicon.png"
  },
  "browser_action": {
    "default_icon": "img/favicon.png",
    "default_title": "gdict history",
    "default_popup": "popup.html"
  }
}
